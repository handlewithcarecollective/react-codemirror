{
  "name": "@handlewithcare/react-codemirror",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "module": "dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "build:esm": "swc ./src --strip-leading-paths --ignore **/__tests__/** -d ./dist/",
    "build:types": "tsc --noEmit false --emitDeclarationOnly",
    "build": "concurrently -P 'npm:build:* {@}' --",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "check:types": "tsc",
    "check": "concurrently -P 'npm:check:* {@}' --",
    "clean": "rimraf \"./dist/!(cjs/package.json)\"",
    "demo": "yarn vite",
    "demo:build": "yarn vite build --outDir docs --base=/react-prosemirror/",
    "dev": "yarn build -- --watch",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --cache --fix .",
    "fix:toc": "markdown-toc --bullets='-' -i README.md",
    "fix": "concurrently -P 'npm:fix:* {@}' --",
    "prepack": "yarn build",
    "test": "vitest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.21.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "22",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "markdown-toc": "^1.2.0",
    "prettier": "^3.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.2.0",
    "vitest": "^3.0.7"
  },
  "packageManager": "yarn@4.6.0",
  "peerDependencies": {
    "react": ">=17 <=19",
    "react-dom": ">=17 <=19"
  }
}
